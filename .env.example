# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-strong-one
DEBUG=True

# Database Configuration (Development uses SQLite, Production uses PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/tedx_db

# Security & CORS
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google OAuth Configuration (Required for Google Sign-in)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Production Superuser Creation Protection (Optional)
# SUPERUSER_CREATION_KEY=TEDx_SuperUser_Production_Key_2025

# üìù Setup Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Generate SECRET_KEY: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# 3. Get Google OAuth credentials from: https://console.developers.google.com/
# 4. Update CORS_ALLOWED_ORIGINS with your frontend URLs
