# 🔧 Django Core Settings
# For development, keep DEBUG=True and use SQLite
# For production, set DEBUG=False and use PostgreSQL
SECRET_KEY=your-secret-key-here
DEBUG=True  # Change to False in production

# 🗄️ Database Settings

# --- Development (SQLite) ---
DATABASE_URL=sqlite:///db.sqlite3

# --- Production (PostgreSQL) ---
# Uncomment below and update credentials when deploying to production
# DATABASE_URL=postgresql://<username>:<password>@<host>/<database_name>

# 🔐 Google OAuth2 Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 🌐 CORS Configuration
# Comma-separated list of allowed frontend origins (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 🛡️ Security Settings
# Replace with your production domain
ALLOWED_HOSTS=localhost,127.0.0.1,tedx-backend.example.com

# 📧 Optional Email Settings
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# 🧭 Optional Deployment Environment Label
# ENVIRONMENT=development

# 🚨 Superuser Creation Protection
# Set this ONLY when creating a superuser in production
SUPERUSER_CREATION_KEY=TEDx_SuperUser_Production_Key_2025
